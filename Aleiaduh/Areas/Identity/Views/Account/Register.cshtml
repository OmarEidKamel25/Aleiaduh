@model Aleiaduh.Models.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0">Create an Account</h2>
                    <p class="text-white-50 small mt-1 mb-0">Join us today!</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label fw-bold"></label>
                            <input asp-for="UserName" class="form-control form-control-lg rounded-pill" placeholder="Enter username" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control form-control-lg rounded-pill" placeholder="Enter email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg rounded-pill" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg rounded-pill" placeholder="Confirm password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Date of Birth -->
                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control form-control-lg rounded-pill" />
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>

                        <!-- Gender -->
                        <div class="mb-4">
                            <label asp-for="Gender" class="form-label fw-bold"></label>
                            <select asp-for="Gender"
                                    class="form-select form-control-lg rounded-pill"
                                    asp-items="Html.GetEnumSelectList<Aleiaduh.Models.ViewModels.Gender>()">
                                <option value="">-- Select Gender --</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Register</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <p class="mb-0">
                        Already have an account?
                        <a asp-action="Index" class="text-decoration-none fw-bold">Back to Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}