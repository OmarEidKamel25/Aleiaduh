@model Doctor

<div class="container my-5">
    <!-- Page Header -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="mb-0">
                        <i class="bi bi-person-plus me-2"></i>Create New Doctor
                    </h2>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <button class="btn btn-light" onclick="history.back()">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </button>
                </div>
            </div>
        </div>

        <!-- Doctor Form -->
        <div class="card-body">
            <form  asp-controller="Doctor" asp-action="Create" asp-area="Admin" enctype="multipart/form-data" class="p-3">

                <!-- Personal Info -->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-header bg-light border-bottom">
                        <h4 class="mb-0"><i class="bi bi-person-circle me-2 text-primary"></i>Personal Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label fw-bold">Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="Name"  class="form-control" placeholder="Enter doctor's name" required value="@Model?.Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                @* <label for="department_id" class="form-label fw-bold">Department</label> *@
                                <label asp-for="Department" class="form-label">Department</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                                    <select id="department_id" name="DepartmentId" class="form-select" required>
                                        <option value="">Select a department</option>
                                        @foreach (var item in ViewBag.Departments)
                                        {
                                            <option value="@item.Id" selected="@(item.Id == Model.DepartmentId ? "selected" : null)">
                                                @item.Name
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-header bg-light border-bottom">
                        <h4 class="mb-0"><i class="bi bi-telephone me-2 text-primary"></i>Contact Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="email" class="form-label fw-bold">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="example@domain.com" required value="@Model?.Email" />
                                    <span asp-Validation-for="Email" class="text-danger"></span></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="phone" class="form-label fw-bold">Phone</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Phone" class="form-control" placeholder="+1 123-456-7890" required value="@Model?.Phone" />
                                    <span asp-Validation-for="Phone" class="text-danger"></span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Social Media & Image -->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0"><i class="bi bi-share me-2"></i>Social Media & Image Upload</h4>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="image_upload" class="form-label fw-bold">Upload Image</label>
                                <input type="file" id="image_upload" name="file" class="form-control" accept="image/*"/>
                                <div class="text-center mt-3">
                                    <img id="image_preview" src="~/img/@Model.ImageURL" alt="Preview Image" class="img-thumbnail d-none" style="max-width: 200px; height: auto;">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label for="facebook_url" class="form-label fw-bold">Facebook</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-facebook text-primary"></i></span>
                                    <input asp-for="FacebookURL" class="form-control" placeholder="https://facebook.com/yourprofile" value="@Model?.FacebookURL">
                                    <span asp-Validation-for="FacebookURL" class="text-danger"></span></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label for="twitter_url" class="form-label fw-bold">Twitter</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-twitter-x text-dark"></i></span>
                                    <input asp-for="TwitterURL" class="form-control" placeholder="https://twitter.com/yourprofile" value="@Model?.TwitterURL">
                                    <span asp-Validation-for="TwitterURL" class="text-danger"></span></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label for="instagram_url" class="form-label fw-bold">Instagram</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-instagram text-danger"></i></span>
                                    <input asp-for="InstagramURL" class="form-control" placeholder="https://instagram.com/yourprofile" value="@Model?.InstagramURL">
                                    <span asp-Validation-for="InstagramURL" class="text-danger"></span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="d-flex justify-content-end gap-3 mt-4">
                    <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm">
                        <i class="bi bi-check-circle me-2"></i>Create Doctor
                    </button>
                    <button type="reset" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- JS: Image Preview -->
<script>
    document.getElementById("image_upload").addEventListener("change", function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const preview = document.getElementById("image_preview");
                preview.src = e.target.result;
                preview.classList.remove("d-none");
            };
            reader.readAsDataURL(file);
        }
    });
</script>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}